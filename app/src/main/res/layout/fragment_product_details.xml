<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.ui.ProductDetailsFragment">

    <ImageView
        android:id="@+id/productIcon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="24dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/productBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productIcon"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productBrand"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/productDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productName"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:text="@string/product_highlights"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDescriptionLabel"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/color_868686"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/productPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDescription"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="24dp"
        android:text="Price INR"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDescription"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/productPriceLabel"
        android:text="Price"
        android:textColor="@color/color_868686"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/offerProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDescription"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/productPrice"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>